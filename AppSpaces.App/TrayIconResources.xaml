<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:tb="http://www.hardcodet.net/taskbar"
	xmlns:app="clr-namespace:AppSpaces.App">

	<ContextMenu
		x:Shared="false"
		x:Key="SysTrayMenu"
		>
		<MenuItem
			Header="Start Streaming"
			Command="{Binding StartStreamingCommand}"
			/>
		<MenuItem
			Header="Stop Streaming"
			Command="{Binding StopStreamingCommand}"
		/>
		<MenuItem
			Header="Settings..."
			Command="{Binding ShowSettingsCommand}"
			/>
		<Separator />
		<MenuItem
			Header="Exit"
			Command="{Binding ExitApplicationCommand}"
			/>
	</ContextMenu>


	<tb:TaskbarIcon
		x:Key="TrayIcon"
		IconSource="pack://application:,,,/Assets/app-icon.ico"
		ContextMenu="{StaticResource SysTrayMenu}"
		>

		<tb:TaskbarIcon.DataContext>
			<app:TrayIconViewModel />
		</tb:TaskbarIcon.DataContext>
	</tb:TaskbarIcon>

</ResourceDictionary>