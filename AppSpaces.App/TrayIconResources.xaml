<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:tb="using:H.NotifyIcon"
	>

	<XamlUICommand
		x:Key="Streaming"
		Label="Start Streaming"
		Description="Enable streaming for the configured streaming space"
	>
		<XamlUICommand.IconSource>
			<SymbolIconSource Symbol="VideoChat" />
		</XamlUICommand.IconSource>
	</XamlUICommand>
	<XamlUICommand
		x:Key="Settings"
		Label="Settings"
		Description="Open the AppSpaces settings page"
		>
		<XamlUICommand.IconSource>
			<SymbolIconSource Symbol="Setting" />
		</XamlUICommand.IconSource>
	</XamlUICommand>
	<XamlUICommand
		x:Key="ExitApplicationCommand"
		Label="Exit"
		Description="Exit"
		>
		<XamlUICommand.IconSource>
			<SymbolIconSource Symbol="ClosePane" />
		</XamlUICommand.IconSource>
	</XamlUICommand>

	<tb:TaskbarIcon
		x:Key="TrayIcon"
		Visibility="Visible"
		ToolTipText="ToolTip"
		ContextMenuMode="SecondWindow"
		LeftClickCommand="{StaticResource Settings}"
		NoLeftClickDelay="True"
		IconSource="\Assets\Martijn-Kooij-Software-Icon-16.ico"
		>
		<tb:TaskbarIcon.ContextFlyout>
			<MenuFlyout>
				<MenuFlyoutItem Command="{StaticResource Streaming}" />
				<MenuFlyoutItem Command="{StaticResource Settings}" />
				<MenuFlyoutSeparator />
				<MenuFlyoutItem Command="{StaticResource ExitApplicationCommand}" />
			</MenuFlyout>
		</tb:TaskbarIcon.ContextFlyout>
	</tb:TaskbarIcon>
</ResourceDictionary>
